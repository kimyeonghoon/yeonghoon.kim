<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login">
	<!-- 이메일 존재 여부 체크 -->
	<select id="getEmailExistCheck" parameterType="hashmap" resultType="Integer">
		SELECT COUNT(member_email)
		FROM member
		WHERE member_email = #{emailInput}
	</select>
	<select id="getEncryptPassword" parameterType="hashmap" resultType="String">
		SELECT member_password
		FROM member
		WHERE member_email = #{emailInput}
	</select>
</mapper>